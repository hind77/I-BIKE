<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.hindou.smash.Ehealth">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:columnCount="1"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"

        >
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"

                android:orientation="horizontal">
                <com.cunoraz.gifview.library.GifView
                    android:id="@+id/tempgif"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    custom:gif="@mipmap/tempgif"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature:"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"

                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â°C"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"

                android:orientation="horizontal">
                <com.cunoraz.gifview.library.GifView
                    android:id="@+id/gifview"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    custom:gif="@mipmap/heartgif"/>

                <TextView
                    android:id="@+id/heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>
                <com.cunoraz.gifview.library.GifView
                    android:id="@+id/pulsegif"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    custom:gif="@mipmap/puslso"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"

                android:orientation="horizontal">
                <com.cunoraz.gifview.library.GifView
                    android:id="@+id/cal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    custom:gif="@mipmap/calories"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories:"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kal"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                   android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
    <Button
        android:id="@+id/startb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:text="@string/start_button"
        android:textColor="@color/ButtonsTextColors"
        android:background="@drawable/sing_in_btn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"></Button>
        <Button
            android:id="@+id/saveb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           android:text="@string/save_button"
            android:textColor="@color/ButtonsTextColors"
            android:background="@drawable/sing_in_btn"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"></Button>
        <Button
            android:id="@+id/showb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/history_button"
            android:textColor="@color/ButtonsTextColors"
            android:background="@drawable/sing_in_btn"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"></Button>
    </LinearLayout>





</LinearLayout>