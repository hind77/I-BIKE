<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/watericon"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/watericon"
        />
    <TextView
        android:id="@+id/drinkview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/watericon"
        android:text="@string/add_water"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/watericon" />

    <EditText
        android:id="@+id/drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="numberDecimal"
        android:layout_toEndOf="@id/drinkview"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/textView"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/drink"
        android:layout_toRightOf="@+id/drink"
        android:text="@string/water_unit"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/drink"/>
</RelativeLayout>