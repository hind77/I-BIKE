<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#e3e3f4"
                android:centerColor="#3b3fa1"
                android:centerY="1.0"
                android:endColor="#14288e"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#44f5e1"
                    android:centerColor="#4edad6"
                    android:centerY="1.0"
                    android:endColor="#34dac7"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>